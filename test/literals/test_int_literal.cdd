    unsigned long ul = 100UL;
    unsigned long long ull = 100ULL;
    
    // 在表达式中
    int result = 10 + 0x10 + 010;  // 10 + 16 + 8 = 34
    
    // 数组大小
    int arr[100];
    
    return 0;
}
